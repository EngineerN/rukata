---

const allPuzzles = await Astro.glob('../pages/puzzles/*.md');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Rukata Companion</title>
	</head>
	<body>
		<h1>Rukata Companion</h1>
		<p>List of all puzzles.</p>
		<ul>
			{allPuzzles.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
		</ul>
	</body>
</html>
